{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "lib": [ "esnext" ],
    "newLine": "lf",
    "target": "esnext",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}
