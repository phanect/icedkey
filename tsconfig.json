{
  "compilerOptions": {
    "alwaysStrict": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "declaration": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "newLine": "lf",
    "target": "esnext",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,

    // Configs for IcedKey apps
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "types": [
      "@cloudflare/workers-types",
      "vite/client"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}
